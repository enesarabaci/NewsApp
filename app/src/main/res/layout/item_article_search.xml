<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_article_search_root"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/item_background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_article_search_image"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:contentDescription="@string/article_image"
        android:scaleType="centerCrop"
        android:src="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_article_search_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_medium"
        android:maxLines="3"
        android:padding="5dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_article_search_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_article_search_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_medium"
        android:maxLines="3"
        android:padding="5dp"
        android:textColor="@color/purple_500"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_article_search_image" />

</androidx.constraintlayout.widget.ConstraintLayout>